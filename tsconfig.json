{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
  },
  "exclude": ["dist/**/*", "test/**/*"],
  "include": ["src/**/*"]
}